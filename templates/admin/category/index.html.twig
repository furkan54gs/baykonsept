{% extends 'admin/adminbase.html.twig' %}

{% block title %}Kategori Listesi{% endblock %}
{% block top %}{% include ('admin/_top.html.twig') %}{% endblock %}

{% block sidebar %}{% include ('admin/_sidebar.html.twig') %}{% endblock %}

{% block content %}
    <section id="main-content">
        <section class="wrapper site-min-height">
            <br>
            <a href="{{ path('admin_category_new') }}" class="fa fa-plus-square btn btn-primary">&nbsp; Kategori Ekleme</a>

            <div class="table100 ver1 m-b-110">
                <table data-vertable="ver1">
                    <thead>
                    <tr class="row100 head">
                        <th class="column100 column1" data-column="column1">Id</th>
                        <th class="column100 column2" data-column="column2">Title</th>
                        <th class="column100 column3" data-column="column3">ParentId</th>
                        <th class="column100 column4" data-column="column4">Keywords</th>
                        <th class="column100 column5" data-column="column5">Description</th>
                        <th class="column100 column6" data-column="column6">Status</th>
                        <th class="column100 column7" data-column="column7">Edit</th>
                        <th class="column100 column8" data-column="column8">Del</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for category in category %}
                        <tr class="row100">
                            <td class="column100 column1" data-column="column1">{{ category.id }}</td>
                            <td class="column100 column2" data-column="column2">{{ category.title }}</td>
                            <td class="column100 column3" data-column="column3">{{ category.parentId }}</td>
                            <td class="column100 column4" data-column="column4">{{ category.keywords }}</td>
                            <td class="column100 column5" data-column="column5">{{ category.description }}</td>
                            {% if category.status=="Pasif" %}
                                <td class="column100 column6" data-column="column6" style="color:#ff1f1a;" >{{ category.status }}</td>
                            {% endif %}
                            {% if category.status=="Aktif" %}
                                <td class="column100 column6" data-column="column6" style="color:#17c505;" >{{ category.status }}</td>
                            {% endif %}
                            <td class="column100 column7" data-column="column7"><a href="{{ path ('admin_category_edit',{'id': category.id}) }}" class="fa fa-edit btn btn-info">Edit</a></td>
                            <td class="column100 column8" data-column="column8"><a href="{{ path ('admin_category_delete',{'id':category.id}) }}" class="fa fa-eraser btn btn-warning"
                                                                                   onclick="return confirm('Silmek istediÄŸinizden emin misiniz?');">Del</a></td>
                        </tr>
                    {% endfor %}
                    </tr>
                    </tbody>
                </table>
            </div>
        </section>
        <!-- /wrapper -->
    </section>
{% endblock %}
