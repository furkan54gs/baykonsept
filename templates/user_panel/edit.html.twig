{% block content %}
<div class="span9">
    <ul class="breadcrumb">
        <li><a href="{{ path('index') }}">AnaSayfa</a> <span class="divider">/</span></li>
        <li><a href="{{ path('user_panel') }}">KullanıcıBilgileri</a> <span class="divider">/</span></li>
        <li class="active">Düzenle</li>
