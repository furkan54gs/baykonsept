    <div class="well">
            <form class="form-horizontal" method="post">
                <div class="control-group">
                    <label class="control-label" for="name"><b>İsim :</b></label>
                    <div class="controls">
                        <input class="input-xlarge" type="text" id="name" name="name" value="{{ user.name }}" required>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="email"><b>Email :</b></label>
                    <div class="controls">
                        <input class="input-xlarge" type="email" id="email" name="email" value="{{ user.email }}" required disabled>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="password"><b>Şifre :</b></label>
                    <div class="controls">
                        <input class="input-xlarge" type="password" id="password" name="password" value="{{ user.password }}" required>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="phone"><b>Telefon :</b></label>
                    <div class="controls">
                        <input  class="input-xlarge" type="text" id="phone" name="phone" value="{{ user.phone }}" required>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="address"><b>Adres :</b></label>
                    <div class="controls">
                        <textarea class="input-xlarge" name="address" id="address" cols="50" rows="5">{{ user.address }}</textarea>
                    </div>
                </div>
