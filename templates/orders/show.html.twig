{% extends 'frontbase.html.twig' %}

{% block title %}Siparişlerim{% endblock %}
{% block sidebar %}
    {{ include ('home/_usersidebar.html.twig') }}
{% endblock %}

{% block content %}
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="{{ path('index') }}">AnaSayfa</a> <span class="divider">/</span></li>
            <li><a href="{{ path('orders_index') }}">Siparişlerim</a> <span class="divider">/</span></li>
            <li class="active">Siparişlerim</li>
        </ul>
        <table class="table table-striped">
            <tbody>
            <tr>
                <td>Sipariş Id:</td>
                <td>{{ order.id }}</td>
            </tr>
            <tr>
                <td>User Id:</td>
                <td>{{ order.userid }}</td>
            </tr>
            <tr>
                <td>Toplam:</td>
                <td>{{ order.amount }}</td>
            </tr>
            <tr>
                <td>Ad Soyad:</td>
                <td>{{ order.name }}</td>
            </tr>
            <tr>
                <td>Adres</td>
                <td>{{ order.addresss }}</td>
            </tr>
            <tr>
                <td>Şehir</td>
                <td>{{ order.city }}</td>
            </tr>
            <tr>
                <td>Telefon</td>
                <td>{{ order.phone }}</td>
            </tr>
            <tr>
                <td>Kargo</td>
                <td>{{ order.shipinfo }}</td>
            </tr>
            <tr>
                <td>Durum</td>
                <td>{{ order.status }}</td>
            </tr>
            </tbody>
        </table>

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Ürün Adı</th>
                <th>Fiyatı</th>
                <th>Miktar</th>
                <th>Toplam</th>
                <th>Durum</th>
            </tr>
            </thead>
            <tbody>
            {% for orderdetail in orderdetail %}
            <tr>
                <td>{{ orderdetail.id }}</td>
                <td>{{ orderdetail.name }}</td>
                <td>{{ orderdetail.price }}</td>
                <td>{{ orderdetail.quantity }}</td>
                <td>{{ orderdetail.amount }}</td>
                <td>{{ orderdetail.status }}</td>
            <tr>
                {% endfor %}

            </tbody>
        </table>
        <a href="{{ path('orders_index') }}"><button class="btn btn-warning" >Geri gel</button></a>

    </div>
    </div>
    </div>
    </div>
{% endblock %}
